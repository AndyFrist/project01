<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hh.gridview_recyclerview.activity.MyrecycleviewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/r_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="listview" />

            <Button
                android:id="@+id/rh_lsitview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="横向的listview" />

            <Button
                android:id="@+id/r_gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="gridview" />


            <Button
                android:id="@+id/rh_gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="横向的gridview" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/r_pubu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="瀑布流" />

            <Button
                android:id="@+id/add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="添加" />
            <Button
                android:id="@+id/remove"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="删除" />

        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
