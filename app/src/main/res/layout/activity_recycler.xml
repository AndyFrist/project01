<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:text="本周完成任务"
            android:textColor="@color/text_title" />

        <com.hh.gridview_recyclerview.View.LineChart
            android:id="@+id/line_chart_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:DarkColor="@color/blue_dark"
            app:LightColor="@color/blue"
            app:ShapeColor="@color/blue_light" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="完成任务"
                android:textColor="@color/text_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="dayClick"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:text="日"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tv_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="weekClick"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:text="周"
                    android:textColor="@color/text_title" />

                <TextView
                    android:id="@+id/tv_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="monthClick"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:text="月"
                    android:textColor="@color/text_title" />
            </LinearLayout>
        </LinearLayout>


        <com.hh.gridview_recyclerview.View.LineChart
            android:id="@+id/line_chart"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@color/white"
            app:DarkColor="@color/red_dark"
            app:LightColor="@color/red"
            app:ShapeColor="@color/red_light" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:orientation="vertical">

        <com.hh.gridview_recyclerview.View.LineChartView
            android:id="@+id/l"
            android:layout_width="match_parent"
            android:layout_height="150dp" />
    </LinearLayout>
</LinearLayout>
